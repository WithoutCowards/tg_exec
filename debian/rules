#!/usr/bin/make -f
%:
	dh $@

override_dh_auto_build:
	GO111MODULE=on CGO_ENABLED=0 go build -ldflags "-s -w" -o tg-exec ./cmd/tg-exec

override_dh_auto_install:
	install -D -m 0755 tg-exec debian/tg-exec/usr/bin/tg-exec
	install -D -m 0600 etc/tg-exec/config.conf debian/tg-exec/etc/tg-exec/config.conf
	install -D -m 0644 man/tg-exec.1 debian/tg-exec/usr/share/man/man1/tg-exec.1
